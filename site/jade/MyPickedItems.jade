table.itemsTable.centreHorz
	thead.itemsTableHead
		tr
			th
				img.spacedOut10(src="img/bag.png" style="width : 50px ; height : 50px;")
			th
				img.spacedOut10(src="img/chest.png" style="width : 50px ; height : 50px;")
				span(data-bind="text: myGold" style="font-size : xx-large; vertical-align:middle;")
				
	tbody.itemsTableBody(data-bind='foreach: myPickedUpItems')
		tr
			td
				span(data-bind='text: Name' )
			td
				img.spacedOut10(data-bind="attr: { src: Image}" style="width : 50px ; height : 50px;")
